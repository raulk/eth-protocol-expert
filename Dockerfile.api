FROM python:3.12-slim

WORKDIR /app

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files first (changes rarely)
COPY pyproject.toml uv.lock ./

# Install dependencies (cached unless pyproject.toml/uv.lock change)
RUN uv sync --frozen --no-dev

# Copy source code last (changes often, but doesn't invalidate deps)
COPY src/ ./src/

EXPOSE 8000

CMD [".venv/bin/uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
